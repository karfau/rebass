{
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "prepare": "lerna run prepare",
    "start": "yarn workspace docs start",
    "build": "yarn workspace docs build",
    "test": "jest",
    "cover": "npx codecov"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@testing-library/react": "^9.1.3",
    "jest": "^24.8.0",
    "jest-emotion": "^10.0.14",
    "jest-styled-components": "^6.3.3",
    "lerna": "^3.16.4",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-test-renderer": "^16.8.6",
    "typescript": "3.7.2"
  },
  "jest": {
    "testMatch": [
      "**/packages/**/test/*.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageReporters": [
      "lcov",
      "text",
      "html"
    ],
    "collectCoverageFrom": [
      "packages/**/src/*.js",
      "!packages/docs/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "setupFilesAfterEnv": [],
    "snapshotSerializers": [
      "jest-emotion"
    ]
  }
}
